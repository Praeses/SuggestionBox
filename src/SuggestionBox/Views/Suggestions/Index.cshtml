@model IList<SuggestionBox.Models.SuggestionModel>
           
@{
    ViewBag.Title = "Suggestions";
}

<script type="text/javascript" src="https://www.google.com/jsapi"></script>

@section headContent
{
    <script src="@Url.Content("~/Scripts/SuggestionBox/Suggestions.js")" type="text/javascript"></script>
	<script type="text/javascript">
	    $(document).ready(function() {
	        SuggestionBox.Suggestions.urlBase = '@Url.Content("~")';
	        SuggestionBox.Suggestions.setUpListPage();
	    });
	</script>
}

<div id="msg"></div>

<div class="page-header">
	<h1>SuggestionBox</h1>
</div>

<p><a id="createSuggestion" href="#">Make a suggestion!</a></p>

<hr/>

<div id="suggestionList">
    @Html.Partial("Partials/_SuggestionList", Model)
</div>
